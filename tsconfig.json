{
    "extends": "@noderun/tsconfig/base.json",
    "compilerOptions": {
        "module": "esnext",
        "isolatedModules": false,
        "baseUrl": ".",
        "paths": {
            "anybuild": ["packages/anybuild/src"],
            "@anybuild/*": ["packages/*/src"],
        }
    },
    "include": ["packages", "typings"],
    "exclude": ["node_modules"],
    "references": [{ "path": "./tsconfig.node.json" }]
}